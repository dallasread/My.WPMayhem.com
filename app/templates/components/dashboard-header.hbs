<div class="menubar">
	<div class="sidebar-toggler visible-xs">
		<i class="ion-navicon"></i>
	</div>

	<div class="page-title">
		{{#if installation}}
			{{installation.name}}
		{{else}}
			{{#if name}}
				{{name}}
			{{else}}
				Your WordPress Sites
			{{/if}}
		{{/if}}
	</div>
	
	{{#if installation}}
		{{#if can_edit}}
			{{#link-to "dashboard.installations.edit" installation class="new-user btn btn-success pull-right"}}
				<span>Edit Info</span>
			{{/link-to}}
		{{else}}
			{{#link-to "dashboard.installations.show" installation class="new-user btn btn-success pull-right"}}
				<span>Back</span>
			{{/link-to}}
		{{/if}}
	{{else}}
		{{#if add_new}}
			{{#link-to "dashboard.installations.new" class="new-user btn btn-success pull-right"}}
				<span>Add Installation</span>
			{{/link-to}}
		{{/if}}
	{{/if}}
</div>