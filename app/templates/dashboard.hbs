<div id="projects">
	<div id="wrapper">
		<div id="sidebar-default" class="main-sidebar">
			<div class="current-user">
				{{#link-to "dashboard.me" class="name"}}
					<img class="avatar" src="images/avatars/1.jpg" />
					<span>
						{{session.auth.name}}
						<!-- <i class="fa fa-chevron-down"></i> -->
					</span>
				{{/link-to}}
				<ul class="menu">
					<li>
						<a href="account-profile.html">Account settings</a>
					</li>
					<li>
						<a href="account-billing.html">Billing</a>
					</li>
					<li>
						<a href="account-notifications.html">Notifications</a>
					</li>
					<li>
						<a href="account-support.html">Help / Support</a>
					</li>
					<li>
						<a href="signup.html">Sign out</a>
					</li>
				</ul>
			</div>
			<div class="menu-section">
				<h3>Manage Your Sites</h3>
				<ul>
					<li>
						{{#link-to "dashboard"}}
							<i class="ion-android-earth"></i> 
							<span>Dashboard</span>
						{{/link-to}}
						
						<ul class="submenu" style="display: block; ">
							{{#each installations}}
								<li>
									{{#link-to "dashboard.installations.show" . class="name"}}
										{{name}}
									{{/link-to}}
								</li>
							{{/each}}
						</ul>
					</li>
				</ul>
			</div>
			<div class="bottom-menu hidden-sm">
				<ul>
					<li><a href="#"><i class="ion-help"></i></a></li>
					<li>
						<a href="#" {{action 'logout' target='controllers.login'}}><i class="ion-log-out"></i></a>
					</li>
				</ul>
			</div>
		</div>

		<div id="content">
			{{outlet}}
		</div>
		
	</div>
