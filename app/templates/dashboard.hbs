<div id="projects">
	<div id="wrapper">
		<div id="sidebar-default" class="main-sidebar">
			<div class="current-user">
				{{#link-to "dashboard.me" class="name"}}
					{{gravatar-image email=session.user.email size=50 class='avatar'}}
					<span>
						{{session.user.name}}
						<!-- <i class="fa fa-chevron-down"></i> -->
					</span>
				{{/link-to}}
				<ul class="menu">
					<li>
						<a href="account-profile.html">Account settings</a>
					</li>
					<li>
						<a href="account-billing.html">Billing</a>
					</li>
					<li>
						<a href="account-notifications.html">Notifications</a>
					</li>
					<li>
						<a href="account-support.html">Help / Support</a>
					</li>
					<li>
						<a href="signup.html">Sign out</a>
					</li>
				</ul>
			</div>
			<div class="menu-section">
				<h3>Manage Your Sites</h3>
				<ul>
					<li>
						{{#link-to "dashboard.installations.index"}}
							<i class="ion-grid"></i> 
							<span>Dashboard</span>
						{{/link-to}}
						
						<ul class="submenu" style="display: block; ">
							{{#each installations}}
								<li>
									{{#link-to "dashboard.installations.show" . class="name"}}
										{{name}}
									{{/link-to}}
								</li>
							{{/each}}
						</ul>
					</li>
					<li>
						{{#link-to "dashboard.status"}}
							<i class="ion-flash"></i> 
							<span>System Status</span>
						{{/link-to}}
					</li>
					{{#if session.user.admin}}
						<li>
							{{#link-to "dashboard.admin.index"}}
								<i class="ion-settings"></i> 
								<span>Admin Tools</span>
							{{/link-to}}
						</li>
					{{/if}}
				</ul>
			</div>
			<div class="bottom-menu hidden-sm">
				<ul>
					<li>
						{{#link-to "dashboard.help"}}
							<i class="ion-help"></i>
						{{/link-to}}
					</li>
					<li>
						<a href="#" {{action 'logout' target='controllers.login'}}><i class="ion-log-out"></i></a>
					</li>
				</ul>
			</div>
		</div>

		<div id="content">
			{{outlet}}
		</div>
		
	</div>
</div>